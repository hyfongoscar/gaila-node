    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.4",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "pnpm run eslint --fix"
    ],
    "*.{md,json}": [
      "prettier --write"
    ],
    "*.{scss,css,sass}": [
      "pnpm lint:css --fix"
