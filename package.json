{
  "name": "flora_node",
  "version": "1.0.0",
  "description": "",
  "type": "module",
  "scripts": {
    "dev": "vite-node src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "eslint": "eslint --ext js,ts,tsx",
    "lint": "pnpm eslint src",
    "lint:fix": "pnpm eslint --fix src && pnpm lint:css --fix && prettier --write src",
    "test:ts": "tsc --project tsconfig.json",
    "test:all": "pnpm lint && pnpm lint:css && pnpm test:ts",
    "prepare": "husky"
  },
  "packageManager": "pnpm@10.7.0+sha512.6b865ad4b62a1d9842b61d674a393903b871d9244954f652b8842c2b553c72176b278f64c463e52d40fff8aba385c235c8c9ecf5cc7de4fd78b8bb6d49633ab6",
  "dependencies": {
    "@eslint/compat": "^1.3.1",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.32.0",
    "dotenv": "^17.2.2",
    "eslint": "^9.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "express": "^5.1.0",
    "mysql2": "^3.14.4",
    "typescript-eslint": "^8.42.0",
    "vite-node": "^3.2.4"
  },
  "devDependencies": {
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.1",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.4",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "pnpm run eslint --fix"
    ],
    "*.{md,json}": [
      "prettier --write"
    ],
    "*.{scss,css,sass}": [
      "pnpm lint:css --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
